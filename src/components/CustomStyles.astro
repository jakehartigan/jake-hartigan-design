---
import '@fontsource/poppins';

import '@fontsource/poppins/300.css'; // Light
import '@fontsource/poppins/400.css'; // Regular
import '@fontsource/poppins/500.css'; // Medium
import '@fontsource/poppins/600.css'; // Semi-Bold
import '@fontsource/poppins/700.css'; // Bold
import '@fontsource/poppins/800.css'; // Extra-Bold
---

<style is:inline>
  :root {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'Poppins', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    --aw-color-primary: rgb(76 33 197);
    --aw-color-secondary: rgb(192 38 211);
    --aw-color-accent: rgb(222 168 29);

    --aw-color-text-heading: rgb(250 250 250);
    --aw-color-text-default: rgb(243 243 243);
    --aw-color-text-muted: rgb(241, 241, 241);
    --aw-color-bg-page: rgb(255 255 255);
    --aw-color-bg-frost: rgba(255, 255, 255, 0.495);

    --aw-color-bg-page-dark: rgb(28, 28, 28);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Poppins', sans-serif;
    --aw-font-serif: 'Poppins', sans-serif;
    --aw-font-heading: 'Poppins', sans-serif;

    --aw-color-primary: rgb(76 33 197);
    --aw-color-secondary: rgb(192 38 211);
    --aw-color-accent: rgb(222 168 29);

    --aw-color-text-heading: rgb(250 250 250);
    --aw-color-text-default: rgb(243 243 243);
    --aw-color-text-muted: rgba(241, 241, 241, 0.955);
    --aw-color-bg-page: rgb(23, 23, 23);

    ::selection {
      background-color: rgb(11, 11, 11);
      color: snow;
    }
  }
</style>
