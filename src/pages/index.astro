---
import Layout from '~/layouts/PageLayout.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
// import Brands from '~/components/widgets/Brands.astro';
// import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: "Jake Hartigan Design | Let's Make Things",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero2
    tagline="Web Design & Management"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Check availability',
        href: 'https://calendar.app.google/FiWwHQAmXENTquhHA',
        icon: 'tabler:arrow-right',
      },
      { text: 'DIY Design Newsletter', href: '#features' },
    ]}
    image={{
      src: '/assets/pink-portal.webp',
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title"> WEBSITES THAT CONVERT YOUR AUDIENCE TO CUSTOMERS</Fragment>

    <Fragment slot="subtitle">
      Make it easy for clients to come to you. Let’s chat about your sales funnel. Book a meeting below to get started.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-dark linear-purple-gradient"></div>
    </Fragment>
  </Hero2>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Benefits"
    title="Web Design Services"
    items={[
      {
        title: 'Automatically Convert',
        description: 'We create webpages and forms to automatically convert your website visitors into clients.',
      },
      {
        title: 'Rapid Design and Development',
        description: 'If you’re on a deadline, we can rapidly design and develop your website.',
      },
      {
        title: 'Internal SEO',
        description:
          'Our websites are unmatched in speed making it easier to show on search engines like Google or Bing.',
      },
    ]}
    image={{
      src: '/assets/purple-magnet.webp',
      alt: 'Magnet Image',
      class: 'mix-blend-screen',
    }}
  >
    <Fragment slot="content"> Magnetize your audience easily </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Tailored Designs',
        description: `Your website will mirror your company's value. Our design team will seamlessly integrate the look and feel of your company to make it recognizable to your loyal audience.`,
      },
      {
        title: 'Out Class Your Competitors',
        description:
          'Customers can see the difference. Looking good is not just a luxury, it’s a business decision with a dramatic ROI.',
      },
      {
        title: 'Unique Approach',
        description:
          'During our design process we want to get to know your story, so that we can build something unique to you.',
      },
    ]}
    image={{
      src: '/assets/purple-cube.webp',
      alt: 'Magnet Image',
      class: 'mix-blend-screen',
    }}
  >
    <Fragment slot="content">Ensure your online presence truly represents you.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-dark linear-purple-gradient"></div>
    </Fragment>
    <Fragment slot=""> </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    tagline="What We Do"
    title="Services We Offer"
    subtitle="We specialize in web design and branding services for content creators on X (Twitter)."
    items={[
      {
        title: 'Branding',
        description: 'How your brand looks has a dramatic effect on whether or not your business sells too.',
        icon: 'tabler:brush',
      },
      {
        title: 'Web Design',
        description: 'Our websites puts you on the map! Not just a side street, main street',
        icon: 'tabler:device-imac',
      },
      {
        title: 'SEO',
        description: 'Optimizing your website for search makes finding customers a breeze.',
        icon: 'tabler:world-search',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:radial-purple-gradient"></div>
    </Fragment>
  </Features2>

