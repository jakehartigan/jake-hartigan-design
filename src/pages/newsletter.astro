---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import SubscribeForm from '~/components/preact/SubscribeForm';

const metadata = {
  title: 'Subscribe DIY Design Newsletter',
  description: 'Design Tips for the Soloprenuer',
  openGraph: {
    images: [
      {
        url: '~/assets/images/newsletter-twitter-card.png', // Change this to the desired image URL
        width: 1200,
        height: 628,
      },
    ],
  },
  twitter: {
    image: '~/assets/images/newsletter-twitter-card.png', // Change this to the desired image URL
    description: 'Design Tips for the Soloprenuer',
  },
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    title="DIY Design Newsletter"
    subtitle="A design newsletter for the solopreneur. Learn how to make things look good, and work well."
  />
  <!-------------MailerLite Embed -->

  <SubscribeForm client:load />
</Layout>
